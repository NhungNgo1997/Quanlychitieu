<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ThongKe.ThongKeNam_Fagment">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:text="Tổng Thu:"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#f41a06"
                android:id="@+id/tongthu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#f41a06"
                android:text="VNĐ"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:text="Tổng Chi:"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#f41a06"
                android:id="@+id/tongchi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#f41a06"
                android:text="VNĐ"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center">

        <TextView
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Dư :" />

        <TextView
            android:id="@+id/tvsodu"
            android:textColor="#f41a06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#f41a06"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VNĐ" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Lịch Sử Thu"
            android:layout_marginLeft="40dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="#3c7b35"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Lịch Sử Chi"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textColor="#3c7b35"
            android:textSize="17dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lvtkthu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"></ListView>
        <ListView
            android:id="@+id/lvtkchi"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"></ListView>

    </LinearLayout>

</LinearLayout>